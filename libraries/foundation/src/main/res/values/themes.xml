<resources>
    <!-- Base application theme. -->
    <style name="Theme.DisneyChallenge" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryLight</item>
        <item name="colorOnPrimary">@color/colorTextOnPrimary</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryDark</item>
        <item name="colorOnSecondary">@color/colorTextOnSecondary</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>

        <!-- Default font for all the app or so should be. But Avenir is not by default supported
        by Android. So I could set it up from an external font provider but I rather not.
        <item name="android:fontFamily">@font/avenir</item>
        <item name="fontFamily">@font/avenir</item>
        -->

        <!-- Theme customization. -->
        <!-- COMPONENTS -->
        <!-- Button -->
        <item name="materialButtonStyle">@style/DisneyButtonStyle</item>

        <!-- TextView -->
        <item name="android:textViewStyle">@style/DisneyTextAppearance</item>

        <!-- SnackBar -->
        <item name="snackbarStyle">@style/Widget.SnackBar</item>

        <!-- Custom navigation managed by Toolbar due to not being an Android Design -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Material Button -->
    <style name="DisneyButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/mb_color_states</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
        <item name="cornerRadius">32dp</item>
        <item name="android:gravity">center</item>
        <item name="android:minHeight">64dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- TextView -->
    <style name="DisneyTextAppearance" parent="android:Widget.TextView">
        <item name="android:textColor">@color/velvetBlack</item>
    </style>

    <!-- SnackBar -->
    <style name="Widget.SnackBar" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:layout_margin">0dp</item>
    </style>

</resources>